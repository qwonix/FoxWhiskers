<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="dish"
            type="ru.qwonix.android.foxwhiskers.Dish" />
    </data>


    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:background="@color/gray_300"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/card_dish_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:elevation="20dp"
            android:minWidth="100dp"
            android:minHeight="100dp"
            android:scaleType="centerCrop"
            app:imageUrl="@{dish.imageUrl}"
            tools:background="@drawable/ic_launcher_background"
            android:contentDescription="dish image" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/card_dish_image"
            android:layout_marginTop="-45dp"
            android:backgroundTint="@color/white"
            android:minWidth="135dp"
            app:cardCornerRadius="15dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="1dp"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/rubik_regular"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="@{dish.title}"
                    android:textColor="@color/gray_900"
                    android:textSize="14sp"
                    tools:text="Кусочки куры су-вид в томатном соусе с гречей" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/rubik_regular"
                    android:gravity="center"
                    android:maxLines="1"
                    android:scrollHorizontally="false"
                    android:text="@{dish.shortDescription}"
                    android:textColor="@color/gray_700"
                    android:textSize="10sp"
                    tools:text="целая, 42 см, 1350 гр" />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="@color/gray_100"
                    android:elevation="10dp"
                    android:fontFamily="@font/rubik_regular"
                    android:gravity="center"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="@{dish.currencyPrice}"
                    android:textColor="@color/gray_900"
                    app:cornerRadius="15dp"
                    tools:text="69 $" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>


    </RelativeLayout>
</layout>