<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="dish"
            type="ru.qwonix.android.foxwhiskers.entity.Dish" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/card_dish_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/dish_example"
            app:imageUrl="@{dish.imageUrl}" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="1dp"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/rubik_regular"
                    android:maxLines="2"
                    android:text="@{dish.title}"
                    android:textColor="@color/gray_900"
                    android:textSize="14sp"
                    tools:text="Пицца" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/rubik_light"
                    android:maxLines="1"
                    android:scrollHorizontally="false"
                    android:text="@{dish.shortDescription}"
                    android:textColor="@color/gray_700"
                    android:textSize="10sp"
                    tools:text="целая, 42 см, 1350 гр" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/yellow_300"
                    android:onClick="@{() -> dish.setCount(dish.count - 1)}"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="0dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginVertical="6dp"
                        android:fontFamily="@font/rubik_regular"
                        android:gravity="center"
                        android:text="–"
                        android:textColor="@color/gray_900"
                        tools:text="–" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:backgroundTint="@color/yellow_300"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="0dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="18dp"
                        android:layout_marginVertical="6dp"
                        android:fontFamily="@font/rubik_regular"
                        android:gravity="center"
                        android:text="@{String.valueOf(dish.count)}"
                        android:textColor="@color/gray_900"
                        tools:text="1" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:backgroundTint="@color/yellow_300"
                    android:onClick="@{() -> dish.setCount(dish.count + 1)}"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="0dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginVertical="6dp"
                        android:fontFamily="@font/rubik_regular"
                        android:gravity="center"
                        android:text="+"
                        android:textColor="@color/gray_900"
                        tools:text="+" />
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>


        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="6dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/rubik_regular"
            android:gravity="center"
            android:text="@{dish.currencyPrice}"
            android:textColor="@color/gray_900"
            android:textSize="24sp"
            tools:text="669 ₽" />


    </LinearLayout>
</layout>