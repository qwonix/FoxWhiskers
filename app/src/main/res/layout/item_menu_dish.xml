<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="priceFormat"
            type="java.text.DecimalFormat" />

        <variable
            name="dish"
            type="ru.qwonix.android.foxwhiskers.entity.Dish" />
    </data>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:background="@color/gray_300">

        <ImageView
            android:id="@+id/card_dish_image"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:contentDescription="dish image"
            android:elevation="1dp"
            android:scaleType="fitCenter"
            android:src="@drawable/dish_example"
            app:imageUrl="@{dish.imageUrl}" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_dish_image"
            android:layout_marginTop="-45dp"
            android:background="@drawable/rectangle_corners15_white_background"
            android:backgroundTint="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="1dp"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/rubik_regular"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="@{dish.title}"
                    android:textColor="@color/gray_900"
                    android:textSize="14sp"
                    tools:text="Пицца" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/rubik_light"
                    android:gravity="center"
                    android:maxLines="1"
                    android:scrollHorizontally="false"
                    android:text="@{dish.shortDescription}"
                    android:textColor="@color/gray_700"
                    android:textSize="10sp"
                    tools:text="целая, 42 см, 1350 гр" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:visibility="@{dish.count != 0 ? View.VISIBLE : View.GONE}"
                    tools:visibility="visible">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical|end"
                        android:adjustViewBounds="true"
                        android:contentDescription="map point icon"
                        android:elevation="1dp"
                        android:onClick="@{() -> dish.setCount(dish.count - 1)}"
                        android:scaleType="fitCenter"
                        android:src="@drawable/minus_sign" />

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_marginHorizontal="5dp"
                        android:background="@drawable/rectangle_corners15_yellow300_background"
                        android:fontFamily="@font/rubik_regular"
                        android:gravity="center"
                        android:text="@{String.valueOf(dish.count)}"
                        android:textColor="@color/gray_900"
                        tools:text="1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical|end"
                        android:adjustViewBounds="true"
                        android:contentDescription="map point icon"
                        android:elevation="1dp"
                        android:onClick="@{() -> dish.setCount(dish.count + 1)}"
                        android:scaleType="fitCenter"
                        android:src="@drawable/plus_sign" />
                </LinearLayout>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="@color/gray_100"
                    android:onClick="@{() -> dish.setCount(dish.count + 1)}"
                    android:visibility="@{dish.count == 0 ? View.VISIBLE : View.GONE}"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="0dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="6dp"
                        android:fontFamily="@font/rubik_regular"
                        android:gravity="center"
                        android:text="@{priceFormat.format(dish.currencyPrice)}"
                        android:textColor="@color/gray_900"
                        tools:text="669 ₽" />

                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </FrameLayout>
    </RelativeLayout>
</layout>