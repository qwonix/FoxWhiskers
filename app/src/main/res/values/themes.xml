<resources>
    <!-- Base application theme. -->
    <style name="Theme.FoxWhiskers" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow_300</item>
        <item name="colorPrimaryVariant">@color/yellow_300</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/yellow_300</item>
        <item name="android:navigationBarColor">@color/yellow_300</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:backgroundTint">@color/gray_300</item>
        <item name="android:background">@drawable/rectangle_top_corners15_background</item>
    </style>

    <style name="ProfileInfoField">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray_700</item>
        <item name="fontFamily">@font/rubik_regular</item>
    </style>

    <style name="ProfileInfoField.FieldPrompt">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:background">@drawable/rectangle_top_corners15_background</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray_700</item>
        <item name="fontFamily">@font/rubik_light</item>
    </style>

    <style name="ProfileInfoField.EditText" parent="ProfileInfoField">
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:textColorHint">@color/gray_700</item>
    </style>

</resources>