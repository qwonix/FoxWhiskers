<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="priceFormat"
            type="java.text.DecimalFormat" />

        <variable
            name="viewModel"
            type="ru.qwonix.android.foxwhiskers.viewmodel.MenuViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_300"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/rectangle_corners15_yellow300_background"
            android:fontFamily="@font/rubik_medium"
            android:paddingHorizontal="30dp"
            android:paddingVertical="5dp"
            android:text="Заказ"
            android:textColor="@color/gray_900"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:visibility="@{viewModel.orderPrice.signum() == 0 ? View.VISIBLE : View.GONE}">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik_regular"
                android:gravity="center"
                android:text="Ваша корзина пуста, откройте Меню\nи выберите понравившийся товар"
                android:textColor="@color/gray_700"
                android:textSize="14sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:background="@drawable/rectangle_corners15_yellow300_background"
                android:fontFamily="@font/rubik_light"
                android:paddingHorizontal="60dp"
                android:paddingVertical="15dp"
                android:text="В меню"
                android:textColor="@color/gray_900"
                android:textSize="14sp" />

        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_ordered_dishes"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:clipToPadding="true"
            android:paddingHorizontal="10dp"
            android:paddingTop="10dp"
            tools:itemCount="3"
            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_order_dish"
            tools:orientation="vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            android:visibility="@{viewModel.orderPrice.signum() != 0 ? View.VISIBLE : View.GONE}">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:background="@drawable/rectangle_top_corners15_white_background"
                android:paddingHorizontal="15dp"
                android:paddingVertical="2dp"
                android:text='@{String.valueOf(viewModel.orderCart.size()) + " товаров"}'
                android:textColor="@color/gray_700"
                android:textSize="12dp" />

            <FrameLayout
                android:id="@+id/checkout_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_corners15_yellow300_background"
                android:paddingHorizontal="5dp"
                android:paddingVertical="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginVertical="6dp"
                    android:fontFamily="@font/rubik_regular"
                    android:text="Оформить заказ"
                    android:textColor="@color/gray_900"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginVertical="6dp"
                    android:fontFamily="@font/rubik_medium"
                    android:text="@{priceFormat.format(viewModel.orderPrice)}"
                    android:textColor="@color/gray_900"
                    android:textSize="16sp"
                    tools:text="669.28 ₽" />

            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</layout>