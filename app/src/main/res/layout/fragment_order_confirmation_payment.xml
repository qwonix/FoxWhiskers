<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="ru.qwonix.android.foxwhiskers.entity.PaymentMethod" />

        <variable
            name="viewModel"
            type="ru.qwonix.android.foxwhiskers.viewmodel.MenuViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:paddingHorizontal="15dp"
        android:paddingBottom="10dp"
        android:transitionName="@string/transition_name"
        tools:background="@color/gray_300">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="10dp"
            android:src="@drawable/peek_drag" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_arrow"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:contentDescription="back arrow"
                android:src="@drawable/back_arrow_sign" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/rubik_regular"
                android:gravity="start"
                android:text="Способ оплаты"
                android:textColor="@color/gray_900"
                android:textSize="24sp" />
        </LinearLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_corners15_white_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:onClick="@{() -> viewModel.setSelectedPaymentMethod(PaymentMethod.GOOGLE_PAY)}"
                    android:orientation="horizontal"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="10dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:adjustViewBounds="true"
                            android:src="@{PaymentMethod.GOOGLE_PAY.drawableId}"
                            tools:src="@drawable/ic_google_pay_payment" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="5dp"
                            android:fontFamily="@font/rubik_regular"
                            android:text="@{PaymentMethod.GOOGLE_PAY.title}"
                            android:textColor="@color/gray_900"
                            tools:text="" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_selected"
                        android:visibility="@{viewModel.selectedPaymentMethod == PaymentMethod.GOOGLE_PAY ? View.VISIBLE : View.INVISIBLE}" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_300" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="@{() -> viewModel.setSelectedPaymentMethod(PaymentMethod.INAPP_ONLINE_CARD)}"
                    android:orientation="horizontal"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="10dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:src="@{PaymentMethod.INAPP_ONLINE_CARD.drawableId}"
                            tools:src="@drawable/inapp_online_card_payment" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="5dp"
                            android:fontFamily="@font/rubik_regular"
                            android:text="@{PaymentMethod.INAPP_ONLINE_CARD.title}"
                            android:textColor="@color/gray_900"
                            tools:text="Картой в приложении" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_selected"
                        android:visibility="@{viewModel.selectedPaymentMethod == PaymentMethod.INAPP_ONLINE_CARD ? View.VISIBLE : View.INVISIBLE}" />

                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/rectangle_corners15_white_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="@{() -> viewModel.setSelectedPaymentMethod(PaymentMethod.OFFLINE_CARD)}"
                    android:orientation="horizontal"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="10dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:src="@{PaymentMethod.OFFLINE_CARD.drawableId}"
                            tools:src="@drawable/offline_card_payment" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="5dp"
                            android:fontFamily="@font/rubik_regular"
                            android:text="@{PaymentMethod.OFFLINE_CARD.title}"
                            android:textColor="@color/gray_900"
                            tools:text="Картой на кассе" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_selected"
                        android:visibility="@{viewModel.selectedPaymentMethod == PaymentMethod.OFFLINE_CARD ? View.VISIBLE : View.INVISIBLE}" />

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_300" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="@{() -> viewModel.setSelectedPaymentMethod(PaymentMethod.CASH)}"
                    android:orientation="horizontal"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="10dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:src="@{PaymentMethod.CASH.drawableId}"
                            tools:src="@drawable/cash_payment" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="5dp"
                            android:fontFamily="@font/rubik_regular"
                            android:text="@{PaymentMethod.CASH.title}"
                            android:textColor="@color/gray_900"
                            tools:text="Наличными" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_selected"
                        android:visibility="@{viewModel.selectedPaymentMethod == PaymentMethod.CASH ? View.VISIBLE : View.INVISIBLE}" />

                </LinearLayout>
            </LinearLayout>
        </FrameLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rectangle_corners15_white_background"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:fontFamily="@font/rubik_regular"
                    android:text="Почта для чеков"
                    android:textColor="@color/gray_900"
                    android:textSize="14sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/payment_icon"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical|end"
                android:adjustViewBounds="true"
                android:contentDescription="map point icon"
                android:elevation="1dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_launcher_background" />
        </FrameLayout>
    </LinearLayout>
</layout>