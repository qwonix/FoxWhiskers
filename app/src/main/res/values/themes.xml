<resources>
    <!-- Base application theme. -->
    <style name="Theme.FoxWhiskers" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow_300</item>
        <item name="colorPrimaryVariant">@color/yellow_300</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/yellow_300</item>
        <item name="android:navigationBarColor">@color/yellow_300</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
        <item name="fontFamily">@font/rubik_light</item>
        <item name="itemTextColor">@color/gray_900</item>
        <item name="labelVisibilityMode">labeled</item>

    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">11sp</item>
        <item name="fontFamily">@font/rubik_regular</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:backgroundTint">@color/gray_300</item>
        <item name="android:background">@drawable/rectangle_top_corners15_background</item>
    </style>


    <style name="Dish">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray_900</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
    </style>

    <style name="Dish.Name" parent="Dish">
        <item name="android:ellipsize">end</item>
        <item name="maxLines">1</item>
    </style>

    <style name="Dish.Description" parent="Dish.Name">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/rubik_light</item>
    </style>

    <style name="Dish.Price" parent="Dish">
        <item name="android:backgroundTint">@color/gray_100</item>
        <item name="android:background">@drawable/rectangle_corners15_background</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
    </style>

    <style name="Dish.Count" parent="Dish">
        <item name="android:minEms">3</item>
        <item name="android:gravity">center</item>
        <item name="android:cropToPadding">true</item>
        <item name="android:backgroundTint">@color/yellow_300</item>
        <item name="android:background">@drawable/rectangle_corners15_background</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="Dish.Count.Control" parent="Dish">
        <item name="android:backgroundTint">@color/yellow_300</item>
        <item name="android:background">@drawable/rectangle_corners13_background</item>
    </style>

    <style name="Mark">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray_900</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
    </style>

    <style name="Description">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray_700</item>
        <item name="android:fontFamily">@font/rubik_light</item>
    </style>

    <style name="Title">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/gray_900</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
    </style>

    <style name="Title.Background" parent="Title">
        <item name="android:textSize">20sp</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingEnd">30dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:backgroundTint">@color/yellow_300</item>
        <item name="android:background">@drawable/rectangle_corners15_background</item>
    </style>


    <style name="PinCodeDigit">
        <item name="android:minWidth">65dp</item>
        <item name="android:textSize">32sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/gray_900</item>
        <item name="android:textColorHint">@color/gray_700</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
    </style>

    <style name="ProfileInfoField">
        <item name="android:backgroundTint">@color/gray_500</item>
        <item name="android:background">@drawable/rectangle_corners15_background</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray_700</item>
        <item name="fontFamily">@font/rubik_regular</item>
    </style>

    <style name="ProfileInfoField.FieldPrompt" parent="ProfileInfoField">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:background">@drawable/rectangle_top_corners15_background</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/rubik_light</item>
    </style>

    <style name="ProfileInfoField.EditText" parent="ProfileInfoField">
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:textColorHint">@color/gray_700</item>
    </style>

    <style name="LoadingProgressBar">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTint">@color/yellow_300</item>
    </style>

</resources>