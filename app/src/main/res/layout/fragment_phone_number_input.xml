<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="hasError"
            type="Boolean" />
        <variable
            name="isMaskFilled"
            type="Boolean" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@{hasError ? @drawable/rectangle_red_stroke_corners15_gray500_background : @drawable/rectangle_corners15_gray500_background}"
                android:clipToPadding="true"
                android:paddingVertical="15dp"
                android:paddingStart="25dp"
                android:paddingEnd="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_phone_call" />

                    <EditText
                        android:autofillHints="phone"
                        android:id="@+id/phone_number_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="5dp"
                        android:background="@null"
                        android:text="+7 "
                        android:fontFamily="@font/rubik_light"
                        android:hint="Ваш номер телефона"
                        android:imeOptions="actionSearch"
                        android:inputType="phone"
                        android:textColor="@color/gray_900"
                        android:textColorHint="@color/gray_700"
                        android:textCursorDrawable="@drawable/cursor"
                        android:textSize="14sp" />

                </LinearLayout>
            </FrameLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/rubik_light"
                android:gravity="center"
                android:text="Нажимая на кнопку «Получить код»\nпринимаю условия политики конфиденциальности\nи даю согласие на обработку данных"
                android:textColor="@color/gray_700"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/send_code_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:background="@{isMaskFilled ? @drawable/rectangle_corners13_yellow300_background : @drawable/rectangle_stroke1_corners15_yellow300_background}"
                android:fontFamily="@font/rubik_regular"
                android:paddingHorizontal="60dp"
                android:paddingVertical="15dp"
                android:text="Получить код"
                android:textColor="@color/gray_900"
                android:textSize="14sp" />

        </LinearLayout>
    </FrameLayout>
</layout>
